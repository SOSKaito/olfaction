{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "CodeSmell": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "message", "ranges"],
      "properties": {
        "kind": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "locations": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "$ref": "#/definitions/Range"
          }
        }
      }
    },
    "Range": {
      "additionalProperties": false,
      "properties": {
        "end": {
          "$ref": "#/definitions/Position"
        },
        "start": {
          "$ref": "#/definitions/Position"
        }
      },
      "required": ["end", "start"],
      "type": "object"
    },
    "Position": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "character": {
          "type": "number"
        },
        "line": {
          "type": "number"
        }
      },
      "required": ["character", "line"]
    }
  }
}
